---
import pkg from '../../../package.json';
import TechStackCard from '../molecules/TechStackCard.astro';

const techStack = [
  {
    title: 'Astro',
    version: pkg.dependencies.astro.replace('^', ''),
    description: 'The web framework for content-driven websites.',
  },
  {
    title: 'Tailwind CSS',
    version: pkg.dependencies.tailwindcss.replace('^', ''),
    description: 'A utility-first CSS framework for rapidly building modern websites.',
  },
  {
    title: 'ESLint',
    version: pkg.devDependencies.eslint.replace('^', ''),
    description: 'Find and fix problems in your JavaScript code.',
  },
];
---

<div class="min-h-screen bg-neutral-950 text-neutral-100 font-sans selection:bg-neutral-800">
  <div class="max-w-3xl mx-auto px-6 py-12">
    <header class="mb-16">
      <div class="w-12 h-12 bg-neutral-100 rounded-full mb-6"></div>
      <h1 class="text-4xl font-light tracking-tight mb-4 text-neutral-100">Astro Starter</h1>
      <p class="text-xl text-neutral-400 font-light leading-relaxed">A simple, clean starter template focusing on typography and whitespace.</p>
    </header>

    <main class="grid gap-8 md:grid-cols-2">
      {techStack.map(tech => <TechStackCard {...tech} />)}
    </main>

    <footer class="mt-20 pt-8 border-t border-neutral-800 text-sm text-neutral-500 flex justify-between items-center">
      <p>&copy; 2026 - {new Date().getFullYear()} Astro Starter. All rights reserved.</p>
      <p>
        by
        <a href="https://www.adydetra.my.id" target="_blank" rel="noopener noreferrer" class="hover:text-neutral-300 transition-colors"> adydetra </a>
      </p>
    </footer>
  </div>
</div>
